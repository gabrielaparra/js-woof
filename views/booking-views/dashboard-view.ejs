    <a href="/booking"> Schedule an Appointment </a>
    <br>
    <a href="/new-pet"> Register a new Pet </a>

    <h3> Upcoming Appointments </h3>

    <ul>
      <% myBookings.forEach((booking) => { %>
        <li>
          <p> This appointment is for <%= booking.petsName %> </p>
          <p> We'll see you on <%= booking.appointmentDate %> </p>
          <p> You chose the <%= booking.chosenPackage %> Package </p>
          <p> Special Requests:
            <% if (booking.specialRequests === "  " ) { %>
                None
            <% } else { %>
              <%= booking.specialRequests %>
            <% } %>
          </p>
          <a href="/dashboard/bookings/<%= booking._id %>/edit">
            Edit This Appointment
          </a>
          <br>
          <a href="/dashboard/bookings/<%= booking._id %>/delete">
            Delete This Appointment
          </a>
        </li>
      <% }); %>
    </ul>

    <h3> My Pets </h3>
    <p> Registered Pets get a free soothing massage every 5 grooming sessions </p>

    <ul>
      <% myPets.forEach((pet) => { %>
        <li>
          <p> <%= pet.petsName %> </p>
          <img src="<%= pet.imageUrl %>">
          <p> <%= pet.petsBreed %>,
            <% if (pet.petsAge === 1) { %>
              <%= pet.petsAge %> year old. </p>
            <% } else { %>
              <%= pet.petsAge %> years old. </p>
            <% } %>
            <a href="/dashboard/pets/<%= pet._id %>/delete">
              Unregister Pet
            </a>
        </li>
      <% }); %>
    </ul>
